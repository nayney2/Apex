public class SfToSfSessionId {
    public static void getCases(){
        Http http = new Http();
        HttpRequest request = new HttpRequest();
        request.setendpoint('https://bootcamp-2e-dev-ed.develop.my.salesforce.com/services/apexrest/Cases');   
        request.setMethod('GET');
        request.setHeader('Authorization','Bearer !AQEAQKF3xhF2naFLRdQbSneDQkA1Rgw0ewyIfB8Y88gUEBbiEXa0wXHrouNE18b9P9D8LhJ17S3AIlulGDkhebH8llSTQW5k');
        HttpResponse response = http.send(request);
        System.debug('Status code '+response.getStatusCode());
        // If the request is successful, parse the JSON response.
        if(response.getStatusCode() == 200) {
            System.debug('response '+response.getBody());
        }
    }
    public static void postCase(){
        Http http = new Http();
        HttpRequest request = new HttpRequest();
        request.setendpoint('https://bootcamp-2e-dev-ed.develop.my.salesforce.com/services/apexrest/Cases/*');   
        request.setMethod('POST');
        request.setheader('Content-Type','application/json;charset=UTF-8');  
        request.setHeader('Authorization','Bearer !AQEAQKF3xhF2naFLRdQbSneDQkA1Rgw0ewyIfB8Y88gUEBbiEXa0wXHrouNE18b9P9D8LhJ17S3AIlulGDkhebH8llSTQW5k');
        request.setbody('{"subject":"test subject","status":"New","origin":"Phone","priority":"Low"}');        
        HttpResponse response = http.send(request);
        System.debug('response '+response.getBody());
        
        // If the request is successful, parse the JSON response.
        if(response.getStatusCode() == 200) {
            System.debug('Record has been created');
        }
    }
}
